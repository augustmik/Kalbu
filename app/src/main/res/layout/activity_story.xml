<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="card"
            type="lt.autismus.singleUnits.SingleCard"/>
        <variable
            name="card2"
            type="lt.autismus.singleUnits.SingleCard"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/now_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/story_now"
            app:layout_constraintBottom_toTopOf="@+id/now_image"
            app:layout_constraintEnd_toEndOf="@+id/now_image"
            app:layout_constraintStart_toStartOf="@+id/now_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/now_image"
            android:layout_width="113dp"
            android:layout_height="88dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/now_tv"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@{card.image}" />

        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/later_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/now_image"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/right_arrow" />

        <TextView
            android:id="@+id/later_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/story_then"
            app:layout_constraintBottom_toTopOf="@id/later_image"
            app:layout_constraintEnd_toEndOf="@id/later_image"
            app:layout_constraintStart_toStartOf="@id/later_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/later_image"
            android:layout_width="98dp"
            android:layout_height="74dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/later_tv"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@{card2.image}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>