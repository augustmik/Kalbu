<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/now_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dabar"
        app:layout_constraintBottom_toTopOf="@+id/now_image"
        app:layout_constraintEnd_toEndOf="@+id/now_image"
        app:layout_constraintStart_toStartOf="@+id/now_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/now_image"
        android:layout_width="113dp"
        android:layout_height="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/now_tv"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_image_black_24dp" />

    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/later_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/now_image"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/right-arrow" />

    <TextView
        android:id="@+id/later_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Po To"
        app:layout_constraintBottom_toTopOf="@id/later_image"
        app:layout_constraintEnd_toEndOf="@id/later_image"
        app:layout_constraintStart_toStartOf="@id/later_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/later_image"
        android:layout_width="98dp"
        android:layout_height="74dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/later_tv"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ic_image_black_24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>